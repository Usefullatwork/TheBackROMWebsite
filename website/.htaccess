# Modern image format support with fallback
<IfModule mod_rewrite.c>
    # WebP images
    RewriteCond %{HTTP_ACCEPT} image/webp
    RewriteCond %{DOCUMENT_ROOT}/$1.webp -f
    RewriteRule ^(.*)\.(jpe?g|png)$ $1.webp [T=image/webp,E=accept:1,L]
    
    # Add WebP Content-Type
    <IfModule mod_headers.c>
        Header append Vary Accept env=REDIRECT_accept
    </IfModule>
    
    AddType image/webp .webp
</IfModule>

# Preload critical resources
<IfModule mod_headers.c>
    <FilesMatch "\.(html|htm)$">
        Header add Link "</css/main.css>; rel=preload; as=style"
        Header add Link "</js/script.js>; rel=preload; as=script"
        Header add Link "</pictures.final/Final Transparent Logo.png>; rel=preload; as=image"
        Header add Link "<https://fonts.googleapis.com>; rel=preconnect"
        Header add Link "<https://fonts.gstatic.com>; rel=preconnect; crossorigin"
    </FilesMatch>
</IfModule>